<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/note_list_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        style="@style/MaximumContentWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:minHeight="64dp"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/note_list_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="0dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/list_item_tint"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/note_list_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/note_list_item_date"
            android:layout_gravity="center_vertical"
            android:maxLines="2"
            android:paddingStart="0dp"
            android:paddingEnd="16dp"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/list_item_tint"
            tools:text="@tools:sample/lorem/random" />

    </RelativeLayout>

</FrameLayout>
